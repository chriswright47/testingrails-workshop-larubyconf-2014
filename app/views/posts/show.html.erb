<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @post.body %> - <%= @post.user.name %>
</p>

<ul>
<% @post.comments.each do | comment | %>
<li><%= comment.body %> - <%= comment.user.name %></li>
<% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
